# --- Security Configuration ---
# Max input length (default: 500)
AIB_SECURITY_MAX_LENGTH=1000
# Block strict SQL/XSS patterns (true/false)
AIB_SECURITY_STRICT_MODE=true
# Allowed HTML tags (comma separated, leave empty to strip all)
AIB_SECURITY_ALLOWED_TAGS=b,i,u,strong,em

# --- Sales Engine Configuration ---
# Hot lead threshold score (0-100)
AIB_SALES_HOT_THRESHOLD=75
# Weights for scoring (must sum up reasonably)
AIB_SALES_WEIGHT_INTENT=35
AIB_SALES_WEIGHT_URGENCY=30
AIB_SALES_WEIGHT_BUDGET=25
# Custom Buying Intent Words (comma separated)
AIB_SALES_BUYING_WORDS=beli,order,pesan,bayar,transfer,deal

# --- Sales Psychology (NEW) ---
# Enable FOMO Messages
AIB_PSYCH_FOMO=true
# Enable Cross-Selling
AIB_PSYCH_CROSS_SELL=true
# Enable Social Proof
AIB_PSYCH_SOCIAL_PROOF=true

# --- Hybrid AI (NEW) ---
# OpenAI API Key (Optional, for fallback)
AIB_OPENAI_KEY=sk-your-openai-key-here
AIB_OPENAI_MODEL=gpt-3.5-turbo

# --- Budget Matcher ---
# Tolerance percentage for budget matching (default: 10)
AIB_BUDGET_TOLERANCE=15
# Show products over budget? (true/false)
AIB_BUDGET_SHOW_OVER=true

# --- Context & Session ---
# Session timeout in minutes (default: 30)
AIB_SESSION_TIMEOUT_MIN=60
# Max messages context memory
AIB_SESSION_MAX_MESSAGES=20

# --- General ---
# Default Locale
AIB_LOCALE=id-ID
# Currency Symbol
AIB_CURRENCY=Rp
# Search Mode (local/remote)
AIB_SEARCH_MODE=local
# Remote API URL (if search mode is remote)
AIB_API_URL=https://api.example.com/search
# Remote API Key
AIB_API_KEY=your-secret-key
